generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum Role {
  USER
  INSTRUCTOR
  ADMIN
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  password      String
  emailVerified DateTime? @map("email_verified_at")
  image         String?
  role          Role      @default(USER)
  isBanned      Boolean   @default(false) @map("is_banned")

  accounts    Account[]
  sessions    Session[]
  userProfile UserProfile?
  userStats   UserStats[]
  submissions CodeSubmission[]
  problems    Problem[]
}

model UserProfile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  username    String  @unique
  displayName String? @map("display_name")

  avatarUrl String?
  bio       String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model UserStats {
  userId String @id @map("user_id")
  user   User   @relation(fields: [userId], references: [id])

  solvedCount    Int @default(0) @map("solved_count")
  attemptedCount Int @default(0) @map("attempted_count")

  totalSubmissions Int @default(0) @map("total_submissions")
  acceptedCount    Int @default(0) @map("accepted_count")
  rating           Int @default(0)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

enum ProgrammingLanguage {
  JAVASCRIPT
  PYTHON
  CPP
}

enum SubmissionStatus {
  PENDING
  RUNNING
  DONE
  ERROR
}

enum ProblemStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model Problem {
  id          String @id @default(cuid())
  title       String
  slug        String @unique
  description String @db.Text

  difficulty Difficulty
  status     ProblemStatus @default(DRAFT)

  // ðŸ”§ Judge config
  timeLimitMs   Int @default(3000) @map("time_limit_ms")
  memoryLimitMb Int @default(256) @map("memory_limit_mb")

  // ðŸ“˜ Learning content
  hint      String? @db.Text
  editorial String? @db.Text

  createdById String @map("created_by")
  createdBy   User   @relation(fields: [createdById], references: [id])

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  submissions  CodeSubmission[]
  testCases    TestCase[]
  problemStats ProblemStats[]
}

enum SubmissionType {
  DRAFT // autosave, only 1 allowed
  ATTEMPT // user clicks "Run"
  SUBMIT // user clicks "Submit"
}

enum ExecutionStatus {
  PENDING
  RUNNING
  DONE
  ERROR
}

enum TestcaseStatus {
  PASSED
  FAILED
  TLE
  MLE
  RUNTIME_ERROR
}

model CodeSubmission {
  id String @id @default(cuid())

  userId    String
  problemId String

  type     SubmissionType
  language ProgrammingLanguage

  // ðŸ§¾ Code stored directly in DB
  sourceCode String @db.Text

  // ðŸ”‘ For dedup / cache
  codeHash String @map("code_hash")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  executions Execution[]

  @@unique([userId, problemId, type], map: "unique_draft_per_problem")
  @@index([userId, problemId])
}

model Execution {
  id           String @id @default(cuid())
  submissionId String @map("submission_id")

  status ExecutionStatus @default(PENDING)

  totalTimeMs   Float? @map("total_time_ms")
  totalMemoryMb Float? @map("total_memory_mb")

  stdout   String? @db.Text
  stderr   String? @db.Text
  exitCode Int?

  createdAt DateTime @default(now())

  submission      CodeSubmission            @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  testcaseResults ExecutionTestcaseResult[]
}

model ExecutionTestcaseResult {
  id          String @id @default(cuid())
  executionId String
  testCaseId  String

  status TestcaseStatus

  timeMs   Float
  memoryMb Float

  stdout String? @db.Text
  stderr String? @db.Text

  execution Execution @relation(fields: [executionId], references: [id], onDelete: Cascade)
  testCase  TestCase  @relation(fields: [testCaseId], references: [id], onDelete: Cascade)

  @@unique([executionId, testCaseId])
}

model TestCase {
  id        String @id @default(cuid())
  problemId String

  input    String  @db.Text
  expected String  @db.Text
  isHidden Boolean @default(true)

  createdAt DateTime @default(now())

  problem                  Problem                   @relation(fields: [problemId], references: [id], onDelete: Cascade)
  executionTestcaseResults ExecutionTestcaseResult[]
}

model ProblemStats {
  problemId String  @id
  problem   Problem @relation(fields: [problemId], references: [id])

  submissionCount Int   @default(0)
  acceptedCount   Int   @default(0)
  acceptanceRate  Float @default(0)

  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
